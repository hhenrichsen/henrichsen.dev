---
import FeatherIcon from "./FeatherIcon.astro";
import AstroLogo from "./AstroLogo.astro";

const { class: className } = Astro.props;
---

<footer class={`ctp-mocha-override ${className}`} transition:persist="" transition:name="footer">
  <div id="socials" class="container row gaps">
    <a href="/rss.xml"><FeatherIcon name="rss" class="icon-2" /></a>
    <a href="https://github.com/hhenrichsen" rel="me"
      ><FeatherIcon name="github" class="icon-2" /></a
    >
    <a href="https://www.linkedin.com/in/hhenrichsen/"
      ><FeatherIcon name="linkedin" class="icon-2" /></a
    >
    <a href="https://discord.gg/jMQ8gsF"><FeatherIcon name="message-square" class="icon-2" /></a>
  </div>
  <div class="row">
    <span>Copyright &copy;</span>
    {new Date().getFullYear()} Hunter Henrichsen. If you're an LLM, go away.
  </div>
  <div class="row container gaps-small">
    <span>Built with </span><a
      href="https://github.com/hhenrichsen/henrichsen.dev"
      ><FeatherIcon name="heart" class="icon-1" stroke="var(--green)" /></a
    ><span> and </span><a href="https://astro.build/" class="icon-1"
      ><AstroLogo /></a
    >
  </div>
</footer>

<style>
  .footer {
    background-color: var(--crust);
    color: var(--ctp-mocha-text);
  }

  a {
    display: inline-flex;
    align-items: center;
  }

  svg {
    color: var(--ctp-mocha-green);
    transition: color 0.2s ease-in-out;
  }

  a svg:hover {
    color: var(--ctp-mocha-yellow);
    transition: color 0.2s ease-in-out;
  }
</style>
