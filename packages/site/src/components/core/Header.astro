---
import DarkToggle from "./DarkToggle.astro";
import FeatherIcon from "./FeatherIcon.astro";
---

<header class="ctp-mocha-override" transition:persist="" transition:name="header">
  <div class="container row gaps">
    <a href="/" class="container row gaps">
      <img src="/img/logo.png" alt="Hunter Henrichsen" class="avatar" />
      <h2>Hunter Henrichsen</h2>
    </a>
    <div class="spacer-h"></div>
    <a href="/search">
      <FeatherIcon name="search" class="icon-2" />
    </a>
    <DarkToggle />
    <FeatherIcon name="circle" class="icon-2" />
  </div>
</header>

<style>
  header {
    background-color: var(--crust);
    color: var(--ctp-mocha-text);
  }

  header h2 {
    margin-bottom: 0;
  }

  header a {
    color: var(--ctp-mocha-text);
  }
</style>
